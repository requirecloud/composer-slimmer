{
    "require": {
        "cweagans/composer-patches": "^1.7",
        "requirecloud/composer-slimmer": "@dev",
        "drupal/core": "^10",
        "drupal/admin_toolbar": "^3",
        "drush/drush": "^12"
    },
    "config": {
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "druidfi/composer-slimmer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "path",
            "url": "../../",
            "options": {
                "symlink": false
            }
        }
    ]
}
